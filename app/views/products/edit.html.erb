<h1>Редактирование продукта</h1>
 
<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :название %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :описание %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :средняя_оценка %><br>
    <%= f.text_field :mark %>
  </p>

  <p>
    <%= f.label :количество_голосов %><br>
    <%= f.text_field :voters %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Назад', products_path %>